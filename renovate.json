{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabledManagers": ["terraform"],
  "regexManagers": [
    {
      "description": "Search all .tf (terraform) files for a comment above source to determine how to lookup the tag to replace with the latest sha.",
      "fileMatch": ["\\.tf$"],
      "matchStrings": [
         "# renovate: datasource=(?<datasource>.*) depName=(?<depName>.*) version=(?<currentVersion>.*)\n.*source.*\\?ref=(?<currentValue>.*)\""
      ],
      "autoReplaceStringTemplate": "\\s*source\\s*=.*ref={{{currentDigest}}}\"",
      "datasourceTemplate": "{{if datasource}}{{datasource}}{{else}}github-tags{{/if}}",
      "versioningTemplate": "{{#if version}}{{version}}{{else}}loose{{/if}}"
    }
  ]
}